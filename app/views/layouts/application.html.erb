<!DOCTYPE html>
<%= tag.html do %>
  <%= tag.head do %>
    <%= tag.title 'RansackDemo' %>
    <%= stylesheet_link_tag 'application' %>
    <%= javascript_include_tag 'application' %>
    <%= javascript_pack_tag 'application' %>
    <%= csrf_meta_tags %>
    <script type="text/javascript">
      $(function() {
        <%= yield :document_ready %>
      });
    </script>
  <% end %>

  <%= tag.body do %>

    <%= yield %>

    <%= tag.footer app_info %>
  <% end %>
<% end %>
